meta {
  name: Create conversationId
  type: http
  seq: 2
}

get {
  url: https://echo.usebruno.com
  body: none
  auth: inherit
}

script:post-response {
  let conversationId = crypto.randomUUID();
  console.log("Created conversationId: " + conversationId);
  bru.setEnvVar("conversationId", conversationId.toString());
}

settings {
  encodeUrl: true
  timeout: 0
}
